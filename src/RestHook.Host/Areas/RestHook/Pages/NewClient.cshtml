@page
@using RestHookHost.Areas.RestHook.Pages
@model RestHookHost.Areas.RestHook.Pages.NewClientModel
@{
}

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new Client.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.ClientId"></label>
                <input asp-for="Input.ClientId" class="form-control" readonly/>
                <span asp-validation-for="Input.ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Description"></label>
                <input asp-for="Input.Description" class="form-control" />
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>